{
  "info": {
    "name": "ADM Shop - Complete E-Commerce API",
    "description": "Colección completa para probar el flujo de e-commerce: Auth → Products → Cart → Orders → Payments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "productId",
      "value": ""
    },
    {
      "key": "cartItemId",
      "value": ""
    },
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "paymentId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Auth",
      "description": "Primero ejecuta el Seed para crear el usuario admin, luego usa Login Admin para obtener el token.",
      "item": [
        {
          "name": "1.1 Login Usuario (Seed)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    pm.collectionVariables.set('adminToken', jsonData.token);",
                  "    console.log('Token y AdminToken guardados');",
                  "}",
                  "",
                  "pm.test('Status code is 200 or 201', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "pm.test('Response has token', function () {",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@gmail.com\",\n  \"password\": \"123Abc\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "1.2 Check Auth Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/auth/check-auth-status"
          }
        },
        {
          "name": "1.3 Test Private Route",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/auth/private"
          }
        }
      ]
    },
    {
      "name": "2. Products",
      "item": [
        {
          "name": "2.1 Listar Productos",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData && jsonData.length > 0) {",
                  "    pm.collectionVariables.set('productId', jsonData[0].id);",
                  "    console.log('Product ID guardado:', jsonData[0].id);",
                  "}",
                  "",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is an array', function () {",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/products?limit=10&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {"key": "limit", "value": "10"},
                {"key": "offset", "value": "0"}
              ]
            }
          }
        },
        {
          "name": "2.2 Crear Producto (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData && jsonData.id) {",
                  "    pm.collectionVariables.set('productId', jsonData.id);",
                  "    console.log('Product ID guardado:', jsonData.id);",
                  "}",
                  "",
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Camiseta Test\",\n  \"price\": 75.00,\n  \"description\": \"Camiseta de prueba para testing\",\n  \"slug\": \"camiseta-test\",\n  \"stock\": 100,\n  \"sizes\": [\"S\", \"M\", \"L\", \"XL\"],\n  \"gender\": \"unisex\",\n  \"tags\": [\"test\", \"camiseta\"],\n  \"images\": [\"https://example.com/img1.jpg\"]\n}"
            },
            "url": "{{baseUrl}}/products"
          }
        },
        {
          "name": "2.3 Obtener Producto por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/products/{{productId}}"
          }
        }
      ]
    },
